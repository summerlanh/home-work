<Window x:Class="PetTracker.FindTracker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetTracker"
        mc:Ignorable="d"
        Title="FindTracker" Height="300" Width="300"
        FocusManager.FocusedElement="{Binding ElementName=uxNumber}">
   
      <StackPanel>
         <TextBlock>Please enter the pet number you are going to update:</TextBlock>
         <TextBox x:Name="uxNumber"></TextBox>
         <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right">
         <Button x:Name="uxSubmit"  MinWidth="10" HorizontalAlignment="Center"  Margin="10" Click="uxSubmit_Click">Submit</Button>
            <Button x:Name="uxCancel"  MinWidth="10" HorizontalAlignment="Center"  Margin="10" Click="uxCancel_Click">Cancel</Button>
         </StackPanel>
      </StackPanel>  
</Window>
